#! /bin/bash
nomuser=$1
	mkdir /var/www/codshare/$nomuser
	touch /var/www/codshare/$nomuser/index.html

	echo "<!DOCTYPE html>" >> /var/www/codshare/$nomuser/index.html
	echo "<html>" >> /var/www/codshare/$nomuser/index.html
	echo "<head>" >> /var/www/codshare/$nomuser/index.html
	echo "<title>$nomuser</title>" >> /var/www/codshare/$nomuser/index.html
	echo "</head>" >> /var/www/codshare/$nomuser/index.html
	echo "<body>" >> /var/www/codshare/$nomuser/index.html
	echo "<h1>$nomuser</h1>" >> /var/www/codshare/$nomuser/index.html
	echo "</body>" >> /var/www/codshare/$nomuser/index.html
	echo "</html>" >> /var/www/codshare/$nomuser/index.html
